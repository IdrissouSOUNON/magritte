<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.xebia.magritte.version.VersionActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/tfMobile"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/tf_mobile"
        app:layout_constraintBottom_toTopOf="@+id/tfLite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/tfLite"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/tf_lite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tfMobile" />

</android.support.constraint.ConstraintLayout>
